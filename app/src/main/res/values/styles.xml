<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Effect" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/abc_action_bar_default_height_material</item>

    </style>
    <style name="Parameters" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="Patch.Button" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/abc_action_bar_default_height_material</item>
    </style>

</resources>
